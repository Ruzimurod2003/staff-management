@model HomeIndexViewModel
@{
    ViewBag.Title = "Staff List";
    
}

<div class="card-deck">
    @foreach (var staff in  Model.Staffs)
    {
        var photoFilePath = "~/images/" + (staff.PhotoFilePath ?? "user.png");
        <div class="card m-3" style="min-width:18rem;max-width:30.5%">
            <div class="card-header">
                <h3>@staff.FirstName @staff.LastName</h3>
            </div>
            <img class="card-img-top" src="@photoFilePath" asp-append-version="true"/>
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Details" asp-route-id="@staff.Id" class="btn btn-primary m-3">View</a>
                <a asp-controller="Home" asp-action="Edit" asp-route-id="@staff.Id" class="btn btn-primary m-3">Edit</a>
                <form asp-controller="Home" asp-action="Delete" asp-route-id="@staff.Id" method="post">
                    <button type="submit" onclick="return confirm('Are you deleted staff!!!')" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    }
</div>

